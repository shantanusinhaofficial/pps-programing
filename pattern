// C++ code to demonstrate star pattern
#include <iostream>
using namespace std;


void triangle(int n)
{


	

	for (int i = 1; i <= n; i++) {

		
		for (int j = 0; j < n-i; j++)
			cout <<" ";

	
		 

	
		for (int j = 1; j <= (2*i)-1; j++) {
		
            
			cout << "*";
		}

		
		cout << endl;
	}
}


int main()
{
	// int n = 4;
    int n;
    cin>>n;
	triangle(n);
	return 0;
}



